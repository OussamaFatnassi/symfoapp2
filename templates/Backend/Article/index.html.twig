{% extends 'base.html.twig' %}

{% block title %}
	Admin des articles |
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center">Administration des articles</h1>
		<a href="#" class="btn btn-primary">Cr√©er un article</a>
		<div class="row mt-4">
			{% for article in articles %}
				<div class="col-md-4">
					<div class="card">
						<h2 class="card-header">{{ article.title }}</h2>
						<div class="card-body">
							<p class="card-text text-italic">{{ article.createdAt|format_datetime('full', 'none')|capitalize }}</p>
							<p class="card-text">{{ article.content }}</p>
							<p class="text-muted">{{ article.author.fullName }}</p>
							<div class="mt-2 d-flex justify-content-between">
								<a href="#" class="btn btn-warning">Modifier</a>
								<a href="#" class="btn btn-danger">Supprimer</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
